#ifndef INC_ACCONFMANAGER_H_
#define INC_ACCONFMANAGER_H_

#include<vector>
#include<map>
#include"ACService.h"
#include"ACManager.h"


/*
 * 主要功能：完成配置文件的生成工作
 *
 *
 */

class ACConfManager
{
public:
	//以配置文件路径初始化类
	ACConfManager(ACService service);
	//读取CrmdemFml32文件
	int readCrmdemFml32();
	//写入CrmdemFml32文件
	int writeCrmdemFml32(Field Field,bool needEndl);
	//解析CrmdemFml32文件，并将未写入的字段写入
	int parseFields(vector<Field>& v_fields);
	//解析metadata.in文件，并将服务配置写入
	int parseMetadataIn();

private:
	string crmdemFileName;
	string metadataFileName;
	map<string,Field> m_allFileMess;
	int maxFieldNum;
};



#endif /* INC_ACCONFMANAGER_H_ */
