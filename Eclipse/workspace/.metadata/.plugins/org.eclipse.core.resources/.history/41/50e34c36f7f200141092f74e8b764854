#ifndef INC_ACCONFMANAGER_H_
#define INC_ACCONFMANAGER_H_

#include<vector>
#include"ACService.h"

/*
 * 主要功能：完成配置文件的生成工作
 *
 *
 */

class ACConfManager
{
public:
	//以配置文件路径初始化类
	ACConfManager(string path);
	//读取CrmdemFml32文件
	int readCrmdemFml32();
	//写入CrmdemFml32文件
	int writeCrmdemFml32(FieldMess fieldMess,bool needEndl);
	//解析CrmdemFml32文件，并将未写入的字段写入
	int parseFields(vector<FieldMess>& v_fields);
	//写入metadata.in文件
	int writeMetadataIn();

private:
	string crmdemFileName;
	string metadataFileName;
	map<string,FieldMess> m_allFileMess;
	int maxFieldNum;
};



#endif /* INC_ACCONFMANAGER_H_ */
